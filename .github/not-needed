name: Daily News Fetch

on:
  schedule:
    # Runs every 6 hours
    #- cron: "0 */6 * * *"
  #workflow_dispatch:       # Allows manual triggering

jobs:
  fetch-news:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.x'

    - name: Install dependencies
      run: |
        pip install -r requirements.txt || true

    - name: Update config with API keys
      env:
        NEWSAPI_KEY: ${{ secrets.NEWSAPI_KEY }}
        ALPHAVANTAGE_KEY: ${{ secrets.ALPHAVANTAGE_KEY }}
      run: |
        sed -i "s/alphavantage_key = .*/alphavantage_key = $ALPHAVANTAGE_KEY/" config.ini
        sed -i "s/newsapi_key = .*/newsapi_key = $NEWSAPI_KEY/" config.ini
   
    - name: Run NewsAPI script
      run: |
        python newsapi_article_aggregator.py

    - name: Commit and push if there are changes
      run: |
        git config --global user.name 'GitHub Action'
        git config --global user.email 'dparedesi@uni.pe'
        git add output/*
        git diff --quiet && git diff --staged --quiet || (git commit -m "Update news files" && git push)
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}


#    - name: Commit CSV files and row count
#      run: |
#        git add politicians_trades.csv top_100_stock_and_options_data.csv
#        git commit -m "Daily update CSV files"
#        git push origin HEAD:${{ github.ref }}
#      env:
#        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}